#! /usr/bin/env node
const Command = require('@writ/command');

new Command({
    root: '.',
    order: {
        help: {
            param: [],
            alias: ['h', '-h']
        },
        version: {
            alias: [
                'v',
                'V',
                '-v',
                '--version'
            ]
        }
    },
    action: {
        help: require('../src/help'),
        version: require('../src/version')
    }
}).start();
